{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env.*local"],
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "ANALYZE",
    "DATABASE_URL",
    "UPSTASH_REDIS_REST_URL",
    "UPSTASH_REDIS_REST_TOKEN",
    "IP_ADDRESS_SALT",
    "BETTER_AUTH_SECRET",
    "SPOTIFY_CLIENT_ID",
    "SPOTIFY_CLIENT_SECRET",
    "SPOTIFY_REFRESH_TOKEN",
    "GOOGLE_API_KEY",
    "GITHUB_TOKEN",
    "WAKATIME_API_KEY",
    "GOOGLE_CLIENT_ID",
    "GOOGLE_CLIENT_SECRET",
    "GITHUB_CLIENT_ID",
    "GITHUB_CLIENT_SECRET",
    "DISCORD_WEBHOOK_URL",
    "RESEND_API_KEY",
    "AUTHOR_EMAIL",
    "NEXT_PUBLIC_SITE_URL",
    "NEXT_PUBLIC_VERCEL_ENV",
    "NEXT_PUBLIC_VERCEL_BRANCH_URL",
    "NEXT_PUBLIC_UMAMI_URL",
    "NEXT_PUBLIC_UMAMI_WEBSITE_ID"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", ".content-collections/**"]
    },
    "build:apps": {
      "dependsOn": ["^build:apps"],
      "outputs": [".next/**", "!.next/cache/**", ".content-collections/**"]
    },
    "build:mdx": {
      "outputs": [".content-collections/**"]
    },
    "clean": {
      "cache": false
    },
    "db:check": {
      "cache": false
    },
    "db:generate": {
      "cache": false,
      "persistent": true
    },
    "db:migrate": {
      "cache": false,
      "persistent": true
    },
    "db:push": {
      "cache": false,
      "persistent": true
    },
    "db:reset": {
      "cache": false,
      "persistent": true
    },
    "db:seed": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:docs": {
      "cache": false,
      "persistent": true
    },
    "dev:packages": {
      "cache": false,
      "persistent": true
    },
    "dev:web": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "lint:fix": {},
    "test:e2e": {
      "outputs": ["playwright-report/**", "test-results/**"]
    },
    "test:e2e:inspector": {
      "cache": false,
      "persistent": true
    },
    "test:e2e:ui": {
      "cache": false,
      "persistent": true
    },
    "type-check": {}
  },
  "ui": "tui"
}
